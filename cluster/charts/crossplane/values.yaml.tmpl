replicas: 1

deploymentStrategy: RollingUpdate

image:
  repository: crossplane/crossplane
  tag: %%VERSION%%
  pullPolicy: Always

args:
- '--debug'

imagePullSecrets:
- dockerhub

personas:
  deploy: true

clusterStacks:
  aws:
    version: master
    deploy: false
  gcp:
    version: master
    deploy: false
  azure:
    version: master
    deploy: false
  rook:
    version: master
    deploy: false

hostedConfig:
  enabled: false

templateStacks:
  enabled: true
  controllerImage: crossplane/templating-controller:v0.2.1

resourcesCrossplane:
  limits:
    cpu: 100m
    memory: 512Mi
  requests:
    cpu: 100m
    memory: 256Mi

resourcesStackManager:
  limits:
    cpu: 100m
    memory: 512Mi
  requests:
    cpu: 100m
    memory: 256Mi

forceImagePullPolicy: ""
